@model IEnumerable<BE.conceptopago>
@{ 
    var modelopersona = BL.PersonaBL.Listar();
   
}

<section id="content">

    <!--start container-->
    <div class="container">

        <div id="mail-app" class="section">
            <div class="row">
                <div class="col s12">
                    <nav class="red">
                        <div class="nav-wrapper">
                            <div class="left col s12 m5 l5">
                                <ul>
                                    <li>
                                        <a href="#!" class="email-menu"><i class="mdi-navigation-menu"></i></a>
                                    </li>
                                    <li>
                                        <a href="#!" class="email-type">Oficina</a>
                                    </li>
                                    <li class="right">
                                        <a href="#!"><i class="mdi-action-search"></i></a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col s12 m7 l7 hide-on-med-and-down">
                                <ul class="right">
                                    <li>
                                        <a href="#!"><i class="mdi-content-archive"></i></a>
                                    </li>
                                    <li>
                                        <a href="#!"><i class="mdi-action-delete"></i></a>
                                    </li>
                                    <li>
                                        <a href="#!"><i class="mdi-content-mail"></i></a>
                                    </li>
                                    <li>
                                        <a href="#!"><i class="mdi-navigation-more-vert"></i></a>
                                    </li>
                                </ul>
                            </div>

                        </div>
                    </nav>
                </div>
                <div class="col s12">
                    <div id="email-sidebar" class="col s2 m1 s1 card-panel">
                        <ul>
                            <li>
                                <img src="images/avatar.jpg" alt="" class="circle responsive-img valign profile-image">
                            </li>
                            <li>
                                <a href="#!"><i class="mdi-content-archive active"></i></a>
                            </li>
                            <li>
                                <a href="#!"><i class="mdi-social-group"></i></a>
                            </li>
                            <li>
                                <a href="#!"><i class="mdi-maps-local-offer"></i></a>
                            </li>
                            <li>
                                <a href="#!"><i class="mdi-alert-error"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div id="email-list" class="">
                        <ul class="collection">
                            @{ int i = 0;}
                            @*@foreach (var iter in Model)
                            {*@ 
                            @foreach (var item in modelopersona)
                            {
                                i++;
                                <li class="collection-item avatar @if (i == 1) {<text>selected</text>}"
                                    ondblclick="MostrarEditar(@item.PersonaId);"
                                    onclick="$(this).addClass('selected').siblings().removeClass('selected');">
                                    <span class="circle light-blue">@item.NombreCompleto.Substring(0, 1)</span>
                                    <span class="email-title">@item.NombreCompleto</span>
                                   
                                        @*<p class="truncate grey-text ultra-small">@iter.Denominacion</p>
                                        <p class="truncate grey-text ultra-small">@iter.Importe</p>*@
                                                                       
                                    <a class="secondary-content email-time"><span class="blue-text ultra-small">DNI @item.DNI</span></a>
                                </li>
                            }
                           @*}*@
                        </ul>





                        
                    </div>
                    
                </div>
            </div>

            <!-- Compose Email Trigger -->
            <div class="fixed-action-btn" style="bottom: 50px; right: 19px;">
                <a class="btn btn-floating btn-large red" href='@Url.Action("Mantener","Bandeja",new { id=0 })'>
                    <i class="mdi-social-person-add"></i>
                </a>
            </div>



            <!-- Compose Email Structure -->
            
        </div>

    </div>
    <!--end container-->

</section>