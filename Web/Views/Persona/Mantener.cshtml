@model BE.persona
<!--breadcrumbs start-->
<div id="breadcrumbs-wrapper">
    <!-- Search for small screen -->
    <div class="header-search-wrapper grey hide-on-large-only">
        <i class="mdi-action-search active"></i>
        <input type="text" name="Search" class="header-search-input z-depth-2" placeholder="Explore Materialize">
    </div>
    <div class="container">
        <div class="row">
            <div class="col s12 m12 l12">
                <h5 class="breadcrumbs-title">GESTIÓN DE PERSONA</h5>
                <ol class="breadcrumbs">
                    <li><a href='@Url.Action("Index","Home")'>Inicio</a></li>
                    <li><a href="@Url.Action("Index","Persona")">Personas</a></li>
                    <li class="active">Mantenimiento</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs end-->

<div id="default-validation" class="section">
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card-panel">
                <h4 class="header2">Datos personales</h4>
                <div class="row">
                    <form id="formValidate" method="post" action='@Url.Action("Guardar","Persona")'>
                        <input type="hidden" name="PersonaId" value="@Model.PersonaId" />
                        <div class="row">
                            <div class="input-field col s12 m4 l6">
                                <i class="mdi-action-account-circle prefix"></i>
                                <label for="Nombres">Nombres*</label>
                                <input id="Nombres" name="Nombres" type="text" data-error=".errorTxt1" value="@Model.Nombres">
                                <div class="errorTxt1"></div>
                            </div>
                            <div class="input-field col s12 m4 l3">
                                <i class="mdi-action-account-circle prefix"></i>
                                <label for="Paterno">Ape. Paterno*</label>
                                <input id="Paterno" name="Paterno" type="text" data-error=".errorTxt2" value="@Model.Paterno">
                                <div class="errorTxt2"></div>
                            </div>
                            <div class="input-field col s12 m4 l3">
                                <i class="mdi-action-account-circle prefix"></i>
                                <label for="Materno">Ape. Materno*</label>
                                <input id="Materno" name="Materno" type="text" data-error=".errorTxt3" value="@Model.Materno">
                                <div class="errorTxt3"></div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12 m4 l3">
                                <i class="mdi-action-picture-in-picture prefix"></i>
                                <label for="DNI">DNI*</label>
                                <input id="DNI" name="DNI" type="number" data-error=".errorTxt4" required minlength="8" value="@Model.DNI">
                                <div class="errorTxt4"></div>
                            </div>
                            <div class="input-field col s12 m4 l3">
                                <i class="mdi-action-settings-cell prefix"></i>
                                <label for="Celular">Celular*</label>
                                <input id="Celular" name="Celular" type="text" data-error=".errorTxt5" required minlength="9"  value="@Model.Celular">
                                <div class="errorTxt5"></div>
                            </div>
                            <div class="input-field col s12 m4 l6">
                                <i class="mdi-communication-email prefix"></i>
                                <label for="Correo">Correo</label>
                                <input id="Correo" name="Correo" type="text" value="@Model.Correo">

                            </div>
                        </div>
                        
                        <div class="row">
                            @*<div class="input-field col s6">
                                    <i class="mdi-editor-insert-invitation prefix"></i>
                                    <label for="Fecha">Fecha Nacimiento*</label>
                                    <input id="Fecha" name="Fecha" type="text" data-error=".errorTxt4" class="datepicker required"
                                           value="@Model.FechaNacimiento.ToShortDateString()">
                                    <div class="errorTxt4"></div>
                                </div>*@
                            <div class="col s6">
                                <label for="genter_select">Sexo</label>
                                <p>
                                    <input name="Sexo" type="radio" id="rbsexom" value="M" @if (Model.Sexo == "M") {  <text> checked</text> } />
                                    <label for="rbsexom">Masculino </label>

                                    <input name="Sexo" type="radio" id="rbsexof" value="F" @if (Model.Sexo == "F") {  <text> checked</text> } />
                                    <label for="rbsexof">Femenino </label>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <a class="btn waves-effect waves-light blue" href='@Url.Action("Index","Persona")'>
                                    Regresar
                                    <i class="mdi-av-fast-rewind right"></i>
                                </a>
                            </div>

                            <div class="input-field col s6">
                                <button class="btn waves-effect waves-light right" type="submit" name="action">
                                    Guardar
                                    <i class="mdi-action-done right"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
   

</div>
@section scripts{
    <script type="text/javascript">
        $(function () {
          

            $(".datepicker").pickadate({ selectMonths: !0, selectYears: 50, format: 'dd/mm/yyyy' })

            $("#formValidate").validate({
                errorElement: 'div',
                errorPlacement: function (error, element) {
                    var placement = $(element).data('error');
                    if (placement) {
                        $(placement).append(error)
                    } else {
                        error.insertAfter(element);
                    }
                }
            });
            $("#formValidate").submit(function () {
                var form = $(this);

                form.ajaxSubmit({
                    dataType: 'JSON',
                    type: 'POST',
                    url: form.attr('action'),
                    success: function (r) {

                        if (r.response) {
                            @if (@Model.PersonaId == 0) {
                                <text>  window.location = '@Url.Action("Mantener", "Persona", new { id = "" })' + '/' + r.result; return;</text>
                            }
                            
                            Materialize.toast('Se Guardó Correctamente!', 4000);
                        }
                        else
                            Materialize.toast(r.message, 4000);
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert(errorThrown);
                    }
                });
                return false;
            });
          
           
        });


    </script>
}